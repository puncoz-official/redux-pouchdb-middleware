{
  "defaultSeverity": "error",
  "extends":         [
    "tslint:recommended"
  ],
  "jsRules":         {
  },
  "rules":           {
    "import-spacing":  false,
    "member-access":   false,
    "ordered-imports": false,
    "quotemark":       false,
    "no-console":      false,
    "semicolon":       false,
    "jsx-no-lambda":   false,
    "prettier":        true,
    "interface-name":  [
      false,
      "never-prefix"
    ]
  },
  "linterOptions":   {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  }
}
