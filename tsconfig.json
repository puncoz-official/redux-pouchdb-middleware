{
  "compilerOptions": {
    "outDir":                           "dist",
    "module":                           "esnext",
    "target":                           "es5",
    "lib":                              [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap":                        true,
    "allowJs":                          false,
    "declaration":                      true,
    "moduleResolution":                 "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns":                true,
    "noImplicitThis":                   true,
    "noImplicitAny":                    true,
    "strictNullChecks":                 true,
    "suppressImplicitAnyIndexErrors":   true,
    "noUnusedLocals":                   true,
    "noUnusedParameters":               true,
    "esModuleInterop":                  true,
    "strict":                           true,
    "alwaysStrict":                     true,
    "importHelpers":                    true,
    "noEmitHelpers":                    true,
    "removeComments":                   true,
    "pretty":                           true,
    "allowSyntheticDefaultImports":     true,
    "plugins":                          [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include":         [
    "src"
  ],
  "exclude":         [
    "node_modules",
    "dist",
    "examples",
    "src/**/*.spec.ts",
    "rollup.config.js"
  ]
}
